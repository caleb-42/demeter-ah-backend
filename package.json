{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "entry": "index.js",
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test npm run migrate && mocha \"tests/**/*.spec.js\" --require @babel/register --timeout 20000  --recursive --exit",
    "prettier": "prettier **/**/*.{js,json} --write",
    "dev": "nodemon --exec babel-node index",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "migrate": "sequelize db:migrate"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --ext .json --ext .js --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.4",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.5.0",
    "lint-staged": "^8.2.1",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "sequelize-cli": "^5.5.0"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "consola": "^2.9.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.2.1",
    "parse-database-url": "^0.3.0",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.8.12",
    "swagger-ui-express": "^4.0.6",
    "yamljs": "^0.3.0"
  }
}
